@model List<Proveedor>
<h1>Lista de Proveedores</h1>
<div>
	<div class="row">
		<div cite="m-2">
			<a asp-action="ReporteProveedores" class="btn btn-dark">Generar Reporte</a>
			<a asp-action="ReporteProveedoresExcel" class="btn btn-dark">Generar Excel</a>
			<a asp-controllor="Proveedor" asp-action="Create" class="btn btn-dark">Nuevo</a>
		</div>
	</div>
	<br />
	<div class="card">
		<form asp-action="SubirExcelProveedores" asp-controller="Proveedor" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="archivoExcel">Subir Excel</label>
				<input type="file" name="archivoExcel" required />
			</div>
			<button type="submit" class="btn btn-dark">subir y guardar</button>
		</form>
	</div>
	<br />
	@if (Model != null)
	{
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<td>Nombre</td>
					<td>NRC</td>
					<td>Dirección</td>
					<td>Telefono</td>
					<td>Email</td>
				</tr>
			</thead>
			<tbody>
				@foreach (var proveedor in Model)
				{
					<tr>
						<th>@proveedor.Nombre </th>
						<th>@proveedor.NRC</th>
						<th>@proveedor.Direccion</th>
						<th>@proveedor.Telefono</th>
						<th>@proveedor.Email</th>

						<th>
							<a class="btn btn-primary" asp-contproveedorler="Proveedor" asp-action="Edit" asp-route-id="@proveedor.Id">Editar</a> |
							<a class="btn btn-danger" asp-contproveedorler="Proveedor" asp-action="Delete" asp-route-id="@proveedor.Id">Eliminar</a>
						</th>
					</tr>
				}
			</tbody>
		</table>
	}
</div>
