@model List<Productos>
<h1>Lista de Productos</h1>
<div>
    <div class="row">
        <div cite="m-2">
            <a asp-action="ReporteProductos" class="btn btn-dark">Generar Reporte</a>
            <a asp-action="ReporteProductosExcel" class="btn btn-dark">Generar Excel</a>
            <a asp-controllor="Productos" asp-action="Create" class="btn btn-dark">Nuevo</a>
        </div>
    </div>
    <br />
    <div class="card">
        <form asp-action="SubirExcelProductos" asp-controller="Productos" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="archivoExcel">Subir Excel</label>
                <input type="file" name="archivoExcel" required />
            </div>
            <button type="submit" class="btn btn-dark">subir y guardar</button>
        </form>
    </div>
    <br />
    @if (Model != null)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Nombre</td>
                    <td>Precio</td>
                    <td>CantidadDisponible</td>
                    <td>FechaCreacion</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <th>@producto.Nombre</th>
                        <th>@producto.Precio</th>
                        <th>@producto.CantidadDisponible</th>
                        <th>@producto.FechaCreacion</th>
                        <th>
                            <a class="btn btn-primary" asp-controller="Productos" asp-action="Edit" asp-route-id="@producto.Id">Editar</a>
                            <a class="btn btn-danger" asp-controller="Productos" asp-action="Delete" asp-route-id="@producto.Id">Eliminar</a>
                        </th>
                    </tr>
                }
            </tbody>

        </table>
    }
</div>
